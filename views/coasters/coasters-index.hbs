<div class="container coasters-index">

  <a href="/coasters/new-coaster" class="btn btn-dark">Crear nueva montaña rusa</a>

  <h1 style="font-weight: 100">Índice de montañas rusas</h1>

  <hr>
  {{#each coasters}}
  <a href="/coasters/details/{{_id}}" class="btn btn-sm btn-dark">Ver detalles</a>
  <h4>{{name}}</h4>
  <p>{{description}}</p>
  <small><strong>Longitud: </strong> {{length}} | <strong>Inversiones: </strong> {{inversions}} | <strong>Parque:
    </strong>{{#each park}}{{name}}{{/each}}</small>
  {{/each}}
  <hr>




</div>